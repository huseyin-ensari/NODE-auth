extends ./layouts/auth-layout

block title
    title New Password


block content
    .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
            .card.o-hidden.border-0.shadow-lg.my-5
                .card-body.p-0
                    // Nested Row within Card Body
                    .row
                        .col-lg-6.d-none.d-lg-block.bg-password-image
                        .col-lg-6
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-2 New Password
                                    if locals.validation_errors != undefined
                                        include ./includes/flash-message
                                form.user(action="/users/reset-password" method="post")
                                    input(name="token" type="hidden" value= token)
                                    .form-group
                                        input#exampleInputPassword.form-control.form-control-user(name="password" type='password' placeholder='Password')
                                    .form-group
                                        input#exampleRepeatPassword.form-control.form-control-user(name="repassword" type='password' placeholder='Repeat Password')
                                    button.btn.btn-primary.btn-user.btn-block
                                        | Reset Password
                                hr