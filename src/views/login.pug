extends ./layouts/auth-layout

block title
    title Login Page

block content
    .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
            .card.o-hidden.border-0.shadow-lg.my-5
                .card-body.p-0
                    // Nested Row within Card Body
                    .row
                        .col-lg-6.d-none.d-lg-block.bg-login-image
                        .col-lg-6
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-4 Welcome
                                    if locals.validation_errors != undefined || locals.success_messages != undefined || locals.session_error != undefined
                                        include ./includes/flash-message
                                form.user(action="/users/login" method="post")
                                    .form-group
                                        input#exampleInputEmail.form-control.form-control-user(value=(typeof email != 'undefined' ? email[0] : '') name="email" type='email' aria-describedby='emailHelp' placeholder='Enter Email Address...')
                                    .form-group
                                        input#exampleInputPassword.form-control.form-control-user(name="password" type='password' placeholder='Password')

                                    button.btn.btn-primary.btn-user.btn-block
                                        | Login
                                hr
                                .text-center
                                    a.small(href='/forgot-password') Forgot Password?
                                .text-center
                                    a.small(href='/register') Create an Account!