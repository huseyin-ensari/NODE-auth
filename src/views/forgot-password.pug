extends ./layouts/auth-layout

block title
    title Forgot Password Page

block content
    .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
            .card.o-hidden.border-0.shadow-lg.my-5
                .card-body.p-0
                    // Nested Row within Card Body
                    .row
                        .col-lg-6.d-none.d-lg-block.bg-password-image
                        .col-lg-6
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-2 Forgot Your Password?
                                    if locals.validation_errors != undefined
                                        include ./includes/flash-message
                                    p.mb-4
                                        | We get it, stuff happens. Just enter your email address below
                                        | and we'll send you a link to reset your password!
                                form.user(action="/users/forgot-password" method="post")
                                    .form-group
                                        input#exampleInputEmail.form-control.form-control-user(value=(typeof email != 'undefined' ? email[0] : '') name="email" type='email' aria-describedby='emailHelp' placeholder='Enter Email Address...')
                                    button.btn.btn-primary.btn-user.btn-block
                                        | Reset Password
                                hr
                                .text-center
                                    a.small(href='/register') Create an Account!
                                .text-center
                                    a.small(href='/login') Already have an account? Login!